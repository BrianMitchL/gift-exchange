{
  "include": ["src", "types"],
  "compilerOptions": {
    "target": "es2017",
    "module": "es2020",
    "lib": ["es2017"],
    "declaration": true,
    "declarationDir": "dist",
    "sourceMap": true,
    "rootDir": "./src",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "listEmittedFiles": false,
    "listFiles": false,
    "pretty": true,
    "baseUrl": "./",
    "esModuleInterop": true,
    "noEmit": true
  }
}
